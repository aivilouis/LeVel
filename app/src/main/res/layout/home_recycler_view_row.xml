<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:layout_marginBottom="20dp"
    tools:ignore="HardcodedText, ContentDescription, Autofill, UnusedAttribute, SpUsage">

    <!--blm retrieve data-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileImg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:strokeWidth="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="5dp"
        android:text="namaprofil"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:textFontWeight="12"/>

    <ImageView
        android:id="@+id/iconSaved"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon_saved"
        app:showAsAction="ifRoom"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/locationImg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/detailsBtn"
        android:layout_width="100dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="315dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/details_button"
        android:textAllCaps="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="350dp"
        android:background="@color/bottomBar" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="315dp"
        android:textColor="@color/white"
        android:layout_marginStart="5dp"
        android:textFontWeight="50"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:shadowColor="@color/secondPrimary"/>

    <ImageView
        android:id="@+id/iconDuration"
        android:layout_marginTop="350dp"
        android:layout_marginStart="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_days"/>

    <TextView
        android:id="@+id/travelDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="357dp"
        android:textSize="10dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/iconBudget"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginTop="350dp"
        android:layout_toStartOf="@+id/totalCost"
        android:src="@drawable/icon_totalcost" />

    <TextView
        android:id="@+id/totalCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="357dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/black"
        android:textSize="10dp" />

</RelativeLayout>