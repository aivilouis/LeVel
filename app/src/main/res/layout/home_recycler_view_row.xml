<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:layout_marginBottom="20dp"
    tools:ignore="HardcodedText, ContentDescription, Autofill, UnusedAttribute, SpUsage">

    <!--blm retrieve data-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileImg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:strokeWidth="0dp"/>

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="5dp"
        android:text="namaprofil"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:textFontWeight="12"/>

    <ImageView
        android:id="@+id/iconSaved"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="281dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon_saved"/>

    <ImageView
        android:id="@+id/iconShare"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon_share" />

    <ImageView
        android:id="@+id/locationImg"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/detailsBtn"
        android:layout_width="100dp"
        android:layout_height="28dp"
        android:background="@drawable/details_button"
        android:textAllCaps="false"
        android:layout_marginStart="195dp"
        android:layout_marginTop="305dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="340dp"
        android:background="@color/bottomBar" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="305dp"
        android:textColor="@color/white"
        android:layout_marginStart="5dp"
        android:textFontWeight="50"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:shadowColor="@color/secondPrimary"/>

    <ImageView
        android:id="@+id/iconDuration"
        android:layout_marginTop="341dp"
        android:layout_marginStart="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_days"/>

    <TextView
        android:id="@+id/travelDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="347dp"
        android:textSize="10dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/iconBudget"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="341dp"
        android:src="@drawable/icon_totalcost"/>

    <TextView
        android:id="@+id/totalCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="224dp"
        android:layout_marginTop="347dp"
        android:textSize="10dp"
        android:textColor="@color/black"/>

</RelativeLayout>