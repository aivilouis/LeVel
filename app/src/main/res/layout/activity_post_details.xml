<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PostDetails"
    android:scrollbars="vertical"
    android:scrollbarSize="0dp"
    tools:ignore="HardcodedText, ContentDescription"
    android:layout_marginRight="23dp"
    android:layout_marginLeft="23dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        tools:ignore="HardcodedText, ContentDescription, Autofill, UnusedAttribute, SpUsage">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeWidth="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp"
            android:text="namaprofil"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:textFontWeight="12"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp">

            <ImageView
                android:id="@+id/tumbnailImg"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/locationBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="0.5dp"
            android:src="@drawable/icon_location"
            app:showAsAction="ifRoom"/>


        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="229.5dp"
            android:gravity="center_horizontal"
            android:textColor="@color/secondPrimary"
            android:layout_marginStart="20dp"
            android:textFontWeight="12"
            android:shadowColor="@color/secondPrimary" />

        <ImageView
            android:id="@+id/iconDuration"
            android:layout_marginTop="255dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="-3.5dp"
            android:src="@drawable/icon_days"/>

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:textFontWeight="12" />

        <ImageView
            android:id="@+id/iconBudget"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginTop="285dp"
            android:layout_marginLeft="-3.5dp"
            android:src="@drawable/icon_totalcost" />

        <TextView
            android:id="@+id/budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="290.5dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:textFontWeight="12"/>

        <ImageView
            android:id="@+id/iconInfo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="324dp"
            android:layout_marginLeft="0.3dp"
            android:src="@drawable/icon_info" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="322dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:textFontWeight="12"
            android:text="Itenary Information"/>

        <ImageView
            android:id="@+id/iconPlane"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="348dp"
            android:layout_marginLeft="18dp"
            android:src="@drawable/icon_plane" />

        <TextView
            android:id="@+id/costPlane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="345dp"
            android:textColor="@color/black"
            android:layout_marginStart="37dp"
            android:textFontWeight="12"/>

        <ImageView
            android:id="@+id/iconHotel"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="375dp"
            android:layout_marginLeft="18dp"
            android:src="@drawable/icon_hotel" />

        <TextView
            android:id="@+id/hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="372dp"
            android:textColor="@color/black"
            android:layout_marginStart="37dp"
            android:textFontWeight="12"/>

        <LinearLayout
            android:id="@+id/newView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="405dp" />
    </RelativeLayout>
</ScrollView>