<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".PostDetails"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeWidth="0dp"/>

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp"
            android:text="namaprofil"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:textFontWeight="12"/>

        <ImageView
            android:id="@+id/iconSaved"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="281dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/icon_saved"
            app:showAsAction="ifRoom"/>

        <ImageView
            android:id="@+id/tumbnailImg"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_tumbnail"
            android:adjustViewBounds="true"/>

       <ImageView
           android:id="@+id/iconLocation"
           android:layout_width="wrap_content"
           android:layout_height="20dp"
           android:layout_marginStart="281dp"
           android:layout_marginTop="8dp"
           android:src="@drawable/icon_location"
           app:showAsAction="ifRoom"/>

       <TextView
           android:id="@+id/location"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="45dp"
           android:layout_marginTop="5dp"
           android:textColor="@color/black"
           android:gravity="center_horizontal"
           android:textFontWeight="12"/>

       <ImageView
           android:id="@+id/iconDuration"
           android:layout_width="wrap_content"
           android:layout_height="20dp"
           android:layout_marginStart="281dp"
           android:layout_marginTop="8dp"
           android:src="@drawable/icon_days"
           app:showAsAction="ifRoom"/>

       <TextView
           android:id="@+id/duration"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="45dp"
           android:layout_marginTop="5dp"
           android:textColor="@color/black"
           android:gravity="center_horizontal"
           android:textFontWeight="12"/>

       <ImageView
           android:id="@+id/iconBudget"
           android:layout_width="wrap_content"
           android:layout_height="20dp"
           android:layout_marginStart="281dp"
           android:layout_marginTop="8dp"
           android:src="@drawable/icon_totalcost"
           app:showAsAction="ifRoom"/>

       <TextView
           android:id="@+id/budget"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="45dp"
           android:layout_marginTop="5dp"
           android:textColor="@color/black"
           android:gravity="center_horizontal"
           android:textFontWeight="12"/>

       <ImageView
           android:id="@+id/iconInfo"
           android:layout_width="wrap_content"
           android:layout_height="20dp"
           android:layout_marginStart="281dp"
           android:layout_marginTop="8dp"
           android:src="@drawable/icon_info"
           app:showAsAction="ifRoom"/>

       <TextView
           android:id="@+id/info"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="45dp"
           android:layout_marginTop="5dp"
           android:textColor="@color/black"
           android:text="Itenary Information"
           android:gravity="center_horizontal"
           android:textFontWeight="12"/>

    </LinearLayout>
</ScrollView>