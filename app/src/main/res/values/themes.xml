<resources>
    <!-- Base application theme. -->
    <style name="Theme.LeVel" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/secondPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/josefinsans_regular</item>
    </style>

    <!-- Toolbar -->
    <style name="customToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/toolbar</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
    <style name="toolbar" parent="@style/Theme.LeVel">
        <item name="android:fontFamily">@font/josefinsans_regular</item>
    </style>
    <style name="customToolbarAccount" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/toolbar</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Rounded Image -->
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>